// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pokemon {
  pokemonId     Int     @id
  pokemonName   String
  type          String
  health        Int
  speed         Int
  attack        Int
  defense       Int
  splDefense    Int
  splAttack     Int
  level         Int
  moves         PokemonMoves[]
  Types         PokemonTypes[]
}

model Moves {
  moveName      String  @id
  type          String
  category      String
  power         Int
  accuracy      Int
  pp            Int
  pokemon       PokemonMoves[]
}

model Types {
  type              String           @id
  strongAgainst     String[]
  weakAgainst       String[]
  doesNotEffect     String[]
  pokemon           PokemonTypes[]
}

model PokemonMoves {
  pokemonMoveId       String    @id @default(cuid())
  pokemonId           Int
  moveInfo            String
  Pokemon             Pokemon   @relation(fields: [pokemonId], references: [pokemonId])
  Moves               Moves     @relation(fields: [moveInfo], references: [moveName])
}

model PokemonTypes {
  pokemonTypeId       String    @id @default(cuid())
  pokemonId           Int
  typeInfo            String
  Pokemon             Pokemon   @relation(fields: [pokemonId], references: [pokemonId])
  Types               Types     @relation(fields: [typeInfo], references: [type])
}

