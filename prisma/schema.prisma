// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Snack {
  snackId     String   @id @default(cuid())
  snackName   String
  flavourText String
  categoryId  Int
  price       Int
  category    Category @relation(fields: [categoryId], references: [categoryId])
}

model Category {
  categoryId   Int     @id
  categoryName String
  snacks       Snack[]
}
